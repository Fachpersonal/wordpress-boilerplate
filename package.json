{
  "private": true,
  "name": "@dotsunited/wordpress-boilerplate",
  "version": "8.0.0",
  "author": "Dots United GmbH",
  "license": "MIT",
  "repository": "https://github.com/dotsunited/wordpress-boilerplate.git",
  "scripts": {
    "build": "webpack --progress",
    "watch": "webpack --progress --watch",
    "build-blocks": "webpack --config webpack-blocks.config.js --progress",
    "watch-blocks": "webpack --config webpack-blocks.config.js --progress --mode=development --watch",
    "tailwind:preflight": "tailwind build node_modules/tailwindcss/preflight.css -c assets/tailwind/src/config.js -o assets/tailwind/preflight.css",
    "tailwind:components": "tailwind build node_modules/tailwindcss/components.css -c assets/tailwind/src/config.js -o assets/tailwind/components.css",
    "tailwind:utilities": "tailwind build node_modules/tailwindcss/utilities.css -c assets/tailwind/src/config.js -o assets/tailwind/utilities.css",
    "tailwind:variables": "tailwind build assets/tailwind/src/variables.css -c assets/tailwind/src/config.js -o assets/tailwind/variables.css",
    "tailwind": "npm run tailwind:preflight && npm run tailwind:components && npm run tailwind:utilities && npm run tailwind:variables",
    "makepot-plugin": "cd public/app/mu-plugins/wordpress-boilerplate/ && npx node-wp-i18n makepot --type plugin --domain-path languages",
    "makepot-theme": "cd public/app/themes/wordpress-boilerplate/ && npx node-wp-i18n makepot --type theme --domain-path languages"
  },
  "browserslist": [
    "> 1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 10"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "classnames": "^2.2.6",
    "ctrly": "^0.6.0",
    "domestique": "^1.6.0",
    "lodash": "^4.17.11",
    "memize": "^1.0.5"
  },
  "devDependencies": {
    "@americanexpress/purgecss-loader": "^1.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "glob": "^7.1.3",
    "imagemin": "^6.1.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "img-loader": "^3.0.1",
    "mini-css-extract-plugin": ">=0.4.0 <0.4.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "postcss-safe-parser": "^4.0.1",
    "style-loader": "^0.23.1",
    "tailwindcss": "^0.7.3",
    "terser-webpack-plugin": "^1.2.1",
    "webapp-webpack-plugin": "^2.5.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-manifest-plugin": "^2.0.4"
  }
}
