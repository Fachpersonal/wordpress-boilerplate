{
    "name": "dotsunited/wordpress-boilerplate",
    "description": "Wordpress Boilerplate",
    "keywords": ["wordpress", "boilerplate"],
    "homepage": "https://github.com/dotsunited/wordpress-boilerplate",
    "license": "MIT",
    "config": {
        "platform": {
            "php": "7.1.0"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "roave/security-advisories": "dev-master",
        "composer/installers": "^1.4",
        "johnpbloch/wordpress": "@stable",
        "oscarotero/env": "^1.1",
        "vlucas/phpdotenv": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DotsUnited\\": ""
        }
    },
    "extra": {
        "installer-paths": {
            "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wp",
        "composer-update": {
            "packages": [
                "johnpbloch/wordpress",
                "wpackagist-plugin/*",
                "dotsunited-wordpress-plugin/*"
            ],
            "commit": true,
            "push": true
        }
    },
    "scripts": {
        "post-create-project-cmd" : [
            "DotsUnited\\ComposerScripts::postCreateProject"
        ],
        "dev-server": "php -S localhost:8000 -t public/"
    }
}
